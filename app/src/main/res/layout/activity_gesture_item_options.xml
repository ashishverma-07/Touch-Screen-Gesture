<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:padding="1dp">


    <ImageView
        android:id="@+id/gesture_image"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:paddingLeft="6dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/menu_item_options"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@android:drawable/ic_menu_more"
        android:paddingRight="12dp"
        android:onClick="populateMenu"
        android:layout_gravity="right|center_vertical"/>

    <TextView
        android:id="@+id/gesture_name"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="fill_parent"
        android:text="Alpha"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/gesture_image"
        android:layout_toLeftOf="@id/menu_item_options"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/gesture_id"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="gesture id"/>
    <TextView
        android:id="@+id/gesture_name_ref"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textSize="0dp"
        />

</RelativeLayout>

